<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/colorBackgroundMain"
        android:orientation="vertical"
        android:padding="15sp"
        tools:context=".activity.ResultActivity">

        <include layout="@layout/header_logo" />

        <Button
            android:id="@+id/btnLowRisk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="5sp"
            android:text="@string/lbl_result_low_risk"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="23sp"
            tools:visibility="visible" />

        <Button
            android:id="@+id/btnMediumRisk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWarning"
            android:padding="5sp"
            android:text="@string/lbl_result_medium_risk"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="23sp"
            tools:visibility="visible" />

        <Button
            android:id="@+id/btnHighRisk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorRisk"
            android:padding="5sp"
            android:text="@string/lbl_result_high_risk"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="23sp"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvRecommendation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:padding="5sp"
            android:textAlignment="viewStart"
            android:textColor="@android:color/black"
            android:textSize="19sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:text="Recommendation" />

        <Button
            android:id="@+id/btnGoHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp"
            android:background="@drawable/rounded_button"
            android:padding="15dp"
            android:text="@string/lbl_go_home"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:textStyle="bold" />


    </LinearLayout>

</ScrollView>