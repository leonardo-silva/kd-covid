<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    tools:context=".activity.Feeling">

    <Button
        android:id="@+id/btnYesSymptom"
        android:layout_width="329dp"
        android:layout_height="92dp"
        android:layout_marginTop="64dp"
        android:background="@color/colorAccent"
        android:padding="16dp"
        android:text="@string/yessymptom_msg"
        android:textColor="@android:color/background_light"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNoSymptom" />

    <Button
        android:id="@+id/btnNoSymptom"
        android:layout_width="329dp"
        android:layout_height="0dp"
        android:layout_marginTop="42dp"
        android:background="@color/colorPrimary"
        android:padding="16dp"
        android:text="@string/nosymptom_msg"
        android:textColor="@android:color/background_light"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFeeling" />

    <TextView
        android:id="@+id/tvFeeling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/feeling_msg"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvWarning"
        android:layout_width="319dp"
        android:layout_height="84dp"
        android:layout_marginTop="16dp"
        android:text="@string/warning_feeling_msg"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnYesSymptom" />
</androidx.constraintlayout.widget.ConstraintLayout>